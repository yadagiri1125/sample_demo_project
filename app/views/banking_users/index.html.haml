.content-wrapper
  %section.content-header
    %h1
      Banking Professionals
  %section.content
    .row
      - if can? :manage, UserInvitation
        = link_to 'Send New Invitation', banking_user_invitation_user_invitations_path, data: { "data-target" => "#myModal", "data-toggle" => "modal" }, class: 'btn bg-red margin', remote: true
      .spacer5
      .col-xs-12
        .box
          .box-body
            %table#example1.table.table-bordered.table-striped
              - if @banking_professionals.present?
                %thead
                  %tr
                    %th{style: 'width: 2%;'} Sr.
                    %th Name
                    %th.text-center{style: 'width: 20%;'} Email
                    %th.text-center{style: 'width: 20%;'} Department
                    / %th.text-center{style: 'width: 6%;'} Actions
                = render partial: 'banking_professionals'
              - else
                No Banking Professional Found
#modal_popup