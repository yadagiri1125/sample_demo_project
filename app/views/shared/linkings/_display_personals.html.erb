<% unless person_obj.blank? %>
    <% person_obj.each do |personal| %>
        <tr id="general_personal_<%= personal.id %>">
          <td>
            <%= h personal.xref.party.name %>
          </td>
          <td colspan="3" class='word_wrap'><%= display_person_detail(personal.xref) %> </td>
          <td>
            <%= link_to '', person_linking_path(personal.id, segment_detail_id: sub_seg), method: :delete,
                            data: { confirm: 'Are you sure?' } , remote: true, class: 'glyphicon glyphicon-remove padding-15 mrgn_top_3' unless current_party.published? %>
          </td>
        </tr>
    <% end %>
<% else %>
    <tr>
      <td colspan='4'>No records found</td>
    </tr>
<% end %>