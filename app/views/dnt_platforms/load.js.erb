$('#dnt_platforms_flash_notice, #dnt_platforms_errors ').hide();
<% if @dnt_platform.errors.any? -%>
  $('#dnt_platforms_errors').html("<%= j render 'shared/errors/errors', object:  @dnt_platform %>").show();
<% else -%>
  $('#dnt_platforms_form').html("<%= j render 'dnt_platforms/form' , sub_seg: @sub_seg %>");
  $('#dnt_platforms_flash_notice').html("<%= j render 'shared/flash_mesg' %>").show(300).delay(1000).hide(300);
<% end -%>