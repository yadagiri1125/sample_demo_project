.content-wrapper
  %section.content-header
    %h1
      Banks
  %section.content
    = render 'layouts/flash_notice'
    .row
      = link_to 'New Bank', new_bank_path, class: 'btn bg-red margin'
      .spacer5
      .col-xs-12
        .box
          .box-body
            %table#example2.table.table-bordered.table-hover.dataTable{"aria-describedby" => "example2_info"}
              - if @banks.present?
                %thead
                  %tr
                    %th Sr.No.
                    %th Name
                    %th Email
                    %th Contact
                    / %th Actions
                %tbody
                  = render :partial => 'list_of_banks'
              - else
                No Bank Found
      .col-xs-6
        .dataTables_paginate.paging_bootstrap
          %ul.pagination
            = paginate @banks